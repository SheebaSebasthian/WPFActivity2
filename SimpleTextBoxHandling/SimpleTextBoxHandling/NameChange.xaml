<Page x:Class="SimpleTextBoxHandling.NameChange"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SimpleTextBoxHandling"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NameChange">
    <!--<Grid>
    </Grid>-->
    <Border Margin="10">
        <StackPanel Margin="20" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="Type Your Name" FontStyle="Italic" HorizontalAlignment="Right" Width="150" Height="28"></Label>
                <TextBox Width="100" Height="25" Name="txtName"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button  Name="btnOK" Click="btnOK_Click" Margin="0,0,20,0" Width="20">OK</Button>
                <Button Name="btnCancel" IsCancel="True" Width="50" Click="btnCancel_Click">Cancel</Button>
            </StackPanel>
        </StackPanel>

    </Border>
</Page>
